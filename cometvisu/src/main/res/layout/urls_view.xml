<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/urlListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:clickable="true"
        tools:listitem="@android:layout/simple_list_item_single_choice"
        tools:itemCount="3"
        tools:layout_height="350dip"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:layout_width="120dip"
            android:layout_height="40dip"
            android:text="Hinzufügen"
            android:id="@+id/addButton" />

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:paddingRight="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Push Notification Token: "/>

        <TextView
            android:paddingLeft="5dip"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:id="@+id/textPushNotificationToken"/>

        <Button
            android:id="@+id/copy2clipboardButton"
            android:layout_width="120dip"
            android:layout_height="40dip"
            android:text="Kopieren"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ausrichtung: "/>

        <Spinner
            android:id="@+id/orientationSpinner"
            android:layout_width="180dip"
            android:layout_height="40dp"
            android:layout_marginRight="15px"/>
        
        <Button
            android:layout_width="120dip"
            android:layout_height="40dip"
            android:text="Zurück"
            android:id="@+id/backButton" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version: "/>

        <TextView
            android:id="@+id/versionTextView"
            android:layout_width="188dp"
            android:layout_height="40dip"
            android:gravity="right|center_vertical"
            android:paddingRight="5dip"
            tools:text="1.0.0-rc1"/>

        <TextView
            android:layout_width="120dip"
            android:layout_height="40dp"
            android:text=""/>

        
    </LinearLayout>

</LinearLayout>