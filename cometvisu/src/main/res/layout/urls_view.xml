<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/urlListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:clickable="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:layout_width="120dip"
            android:layout_height="40dip"
            android:text="Hinzufügen"
            android:id="@+id/addButton" />

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:paddingRight="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Push Notification Token: "/>

        <TextView
            android:paddingLeft="5dip"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:id="@+id/textPushNotificationToken"/>

        <Button
            android:layout_width="120dip"
            android:layout_height="40dip"
            android:text="Kopieren"
            android:id="@+id/copy2clipboardButton"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ausrichtung: "/>

        <Spinner
            android:id="@+id/orientationSpinner"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="15px"/>
        
        <Button
            android:layout_width="120dip"
            android:layout_height="40dip"
            android:text="Zurück"
            android:id="@+id/backButton" />

    </LinearLayout>

</LinearLayout>